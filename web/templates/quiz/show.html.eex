<h1><%= titleize(@quiz.name) %></h1>

<ol>
  <%= for question <- @questions do %>
    <li>
      <%= question.content %>
        <ol>
          <li>
            <%= question.answer.content %>
          </li>
          <%= for response <- question.responses do %>
          <li>
            <%= response.content %>
          </li>
          <% end %>
        </ol>
    </li>
  <% end %>
</ol>
